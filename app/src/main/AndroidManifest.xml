<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Разрешение на интернет -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Order_manager"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".DeleteUserActivity"
            android:exported="false" />
        <!-- Активности приложения -->
        <activity
            android:name=".EditOrderActivity"
            android:exported="false" /> <!-- Редактирование заказа -->
        <activity
            android:name=".AllOrdersActivity"
            android:exported="false" /> <!-- Просмотр всех заказов -->
        <activity
            android:name=".MyOrdersActivity"
            android:exported="false" />
        <activity
            android:name=".CreateOrderActivity"
            android:exported="false" />
        <activity
            android:name=".RegisterActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:exported="false" />
        <activity
            android:name=".EmployeeMainActivity"
            android:exported="false" /> <!-- Экран сотрудника -->
        <activity
            android:name=".ClientMainActivity"
            android:exported="false" />
    </application>

</manifest>